<h1>Listing doctors</h1>

<table>
  <tr>
    <th>Doctor</th>
    <th>Speciality</th>
    <th>Name</th>
    <th>Practice</th>
    <th>Declaration</th>
    <th>Education</th>
    <th>Affiliations</th>
    <th>Lenguague</th>
    <th>Certifications</th>
    <th>Memberships</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @doctors.each do |doctor| %>
  <tr>
    <td><%= doctor.doctor_id %></td>
    <td><%= doctor.speciality %></td>
    <td><%= doctor.name %></td>
    <td><%= doctor.practice %></td>
    <td><%= doctor.declaration %></td>
    <td><%= doctor.education %></td>
    <td><%= doctor.affiliations %></td>
    <td><%= doctor.lenguague %></td>
    <td><%= doctor.certifications %></td>
    <td><%= doctor.memberships %></td>
    <td><%= link_to 'Show', doctor %></td>
    <td><%= link_to 'Edit', edit_doctor_path(doctor) %></td>
    <td><%= link_to 'Destroy', doctor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

