<div class="container">
<%= gmaps4rails(@json) %>

<h1>Listing clinics</h1>

<table class="table table-striped">
  <tr>
    <th>Picture</th>
    <th>Name</th>
    <th>Address</th>
    

    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @clinics.each do |clinic| %>
  <tr>
    <td><%= image_tag clinic.picture_url(:thumb) if clinic.picture? %></td>
    <td><%= clinic.name %></td>
    <td><%= clinic.address %></td>
    
    
    <td><%= link_to 'Show', clinic, class: "btn btn-custom btn-small" %></td>
    <td><%= link_to 'Edit', edit_clinic_path(clinic) %></td>
    <td><%= link_to 'Destroy', clinic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Clinic', new_clinic_path %>
</div>